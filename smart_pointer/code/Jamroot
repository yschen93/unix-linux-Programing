import os ;
path-constant CWD : . ;
constant BOOST_ROOT : [ os.environ BOOST_ROOT ] ;
constant TPL_ROOT : [ os.environ TPL_ROOT ] ;
constant TURTLE_ROOT : $(TPL_ROOT)/turtle-1.3.2 ;

ECHO "path of BOOST_ROOT is " $(BOOST_ROOT) ;
ECHO "path of TURTLE_ROOT is " $(TURTLE_ROOT) ;

use-project /unique_ptr : $(CWD)/unique_ptr ;

project
    :   requirements
        <debug-symbols>on
        <cxxflags>-std=c++11
        <threading>multi
        <include>$(BOOST_ROOT)
    :   default-build debug
        <link>shared
    :   build-dir bin
    ;

alias dependencies :
        /unique_ptr//unique_ptr
    ;

lib smart_pointer
    :   [ glob *.cpp : abandoned ]
        dependencies
    ;